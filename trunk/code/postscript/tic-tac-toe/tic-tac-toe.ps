%!PS-Adobe-1.0

/init {
	72 25.4 div dup scale
	0 setlinecap
	1 setlinewidth	
} def

/pagewidth 210 def
/pageheight 297 def

/showLineNumber {
	[/number] dup length 0 add dict begin {exch def} forall
		pagewidth 2 div 10 moveto
		number 10 string cvs show
	end
} def

/showGrid {
	[/factor /y /x] dup length 0 add dict begin {exch def} forall
		gsave
			x y translate
			factor 30 div dup scale
			0 10 moveto 30 0 rlineto
			0 20 moveto 30 0 rlineto
			10 0 moveto 0 30 rlineto
			20 0 moveto 0 30 rlineto
			stroke
		grestore
	end
} def

/showPiece {
	[/piece /j /i /factor /y /x] dup length 0 add dict begin {exch def} forall
		gsave
			 x y translate
			 factor 30 div dup scale
			 10 i mul 20 10 j mul sub translate
			 piece
			 stroke
		grestore
	end
} def

/showCross {
	{
		2 2 moveto 8 8 lineto
		2 8 moveto 8 2 lineto
	} showPiece
} def

/showNought {
	{5 5 3 0 360 arc} showPiece
} def

/showOption {
	[/j /i /factor /y /x] dup length 2 add dict begin {exch def} forall
		x y factor i j	
		{
			3 3 moveto
			1 i 3 j mul add add 1 string cvs show
		} showPiece
	end	
} def

/showPosition {
	[/position] dup length 6 add dict begin {exch def} forall
		/gridSize 100 def

		/x pagewidth gridSize sub 2 div def
		/y pageheight gridSize sub 2 3 div mul def

		x y gridSize showGrid
		0 1 2 {
			/i exch def
			0 1 2 {
				/j exch def
			} for
		} for
	end
} def

save /cleanslate exch def

init

/Helvetica findfont 5 scalefont setfont

37 showLineNumber
stroke

(__oxx____) showPosition
showpage

cleanslate restore
